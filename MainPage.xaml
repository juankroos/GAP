<Page
    x:Class="GAP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GAP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Auto" HorizontalScrollMode="Auto">

        <Grid>
            <Frame x:Name="MainFrame"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" Text="Welcome to GAP " VerticalAlignment="Top" Height="111" Width="580" FontFamily="Arial Black" FontSize="48" FontWeight="Bold" FontStyle="Italic"/>
            <Button Content="Create a new account" Margin="0,771,0,0" VerticalAlignment="Top" Height="106" Width="299" HorizontalAlignment="Center" Click="Button_Click"/>
            <Button x:Name="cree_compte" Content="Fermer" Margin="176,351,0,0" VerticalAlignment="Top" Height="99" Width="218" FontFamily="Arial Rounded MT Bold" FontSize="22"/>
            <Button x:Name="solde" Content="solde" Margin="1130,351,0,0" VerticalAlignment="Top" Height="99" Width="208" FontFamily="Arial Rounded MT Bold" FontSize="22" Click="solde_Click"/>
            <Button x:Name="retrait" Content="retrait" Margin="176,640,0,0" VerticalAlignment="Top" Height="106" Width="218" FontFamily="Arial Rounded MT Bold" FontSize="22"/>
            <Button x:Name="depot" Content="depot" Margin="1130,640,0,0" VerticalAlignment="Top" Height="106" Width="208" FontFamily="Arial Rounded MT Bold" FontSize="22" Click="depot_Click"/>
        </Grid>
    </ScrollViewer>
</Page>
